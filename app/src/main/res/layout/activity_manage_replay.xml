<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.cluo29.camtest24.ManageReplayActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarManageReplay"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/buttonMR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="49dp"
        android:text="Launch Replay"
        android:layout_below="@+id/textViewMR2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonMR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Export Results"
        android:layout_below="@+id/buttonMR1"
        android:layout_alignStart="@+id/buttonMR1" />

    <TextView
        android:id="@+id/textViewMR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonMR1"
        android:layout_below="@+id/toolbarManageReplay"
        android:layout_marginTop="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewMR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewMR1"
        android:layout_below="@+id/textViewMR1"
        android:layout_marginTop="10dp"
        android:text="TextView" />

</RelativeLayout>
